@model EventPlanner.Models.Evento
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/Registro.css" rel="stylesheet">
    <title>Registro de Usuário</title>
</head>
<body>
    <h1 class="titulo">Registro de Usuário</h1>

    <div class="formulario-container">
        <form method="post" asp-controller="Evento" asp-action="CriarEventoInfantil" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeEvento" class="control-label"></label>
                <input asp-for="NomeEvento" class="form-control" />
                <span asp-validation-for="NomeEvento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataFinal" class="control-label"></label>
                <input asp-for="DataFinal" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataFinal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantMaxPessoas" class="control-label"></label>
                <input asp-for="QuantMaxPessoas" class="form-control" />
                <span asp-validation-for="QuantMaxPessoas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantCriancas" class="control-label"></label>
                <input asp-for="QuantCriancas" class="form-control" />
                <span asp-validation-for="QuantCriancas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantMetrosQuadrados" class="control-label"></label>
                <input asp-for="QuantMetrosQuadrados" class="form-control" />
                <span asp-validation-for="QuantMetrosQuadrados" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantCadeiras" class="control-label"></label>
                <input asp-for="QuantCadeiras" class="form-control" />
                <span asp-validation-for="QuantCadeiras" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantRefri" class="control-label"></label>
                <input asp-for="QuantRefri" class="form-control" />
                <span asp-validation-for="QuantRefri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantSalgados" class="control-label"></label>
                <input asp-for="QuantSalgados" class="form-control" />
                <span asp-validation-for="QuantSalgados" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantDoces" class="control-label"></label>
                <input asp-for="QuantDoces" class="form-control" />
                <span asp-validation-for="QuantDoces" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantCarne" class="control-label"></label>
                <input asp-for="QuantCarne" class="form-control" />
                <span asp-validation-for="QuantCarne" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>

            <div class="f2orm-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FotoDoEvento"></label>
                <input asp-for="FotoDoEvento" type="file" class="form-control" />
                <span asp-validation-for="FotoDoEvento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <p>Já tem uma conta? <a href="/Bussola/RetornaIndex">Faça login</a></p> <!-- Adicione um link para a página de login -->
    </div>
</body>
<script src="~/js/EventoInfantil.js" asp-append-version="true"></script>
</html>
