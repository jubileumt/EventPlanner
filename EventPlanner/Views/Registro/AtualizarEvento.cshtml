@model EventPlanner.Models.Evento
<!DOCTYPE html>

<html>
<head>
    <title>Informações do tempo</title>

</head>
<body>
    <p id="descricao"></p>
    <p id="temperatura"></p>

    <img src="@Url.Action("DisplayImage", new { id = Model.ID })" alt="Image" />

    <form method="post" asp-controller="Evento" asp-action="Edit">

        <div class="form-group">
            <label asp-for="NomeEvento"></label>
            <input asp-for="NomeEvento" class="form-control" />
            <span asp-validation-for="NomeEvento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantMaxPessoas"></label>
            <input asp-for="QuantMaxPessoas" class="form-control" />
            <span asp-validation-for="QuantMaxPessoas" class="text-danger"></span>
        </div>

        @{
            if (Model.QuantCriancas != null && Model.TipoEvento == "Evento infantil")
            {
                <div class="form-group">
                    <label asp-for="QuantCriancas"></label>
                    <input asp-for="QuantCriancas" class="form-control" />
                    <span asp-validation-for="QuantCriancas" class="text-danger"></span>
                </div>
            }
        }

        <div class="form-group">
            <label asp-for="QuantRefri"></label>
            <input asp-for="QuantRefri" class="form-control" />
            <span asp-validation-for="QuantRefri" class="text-danger"></span>
        </div>

        @{
            if (Model.QuantAlcool != null && Model.TipoEvento == "Aniversário")
            {
                <div class="form-group">
                    <label asp-for="QuantAlcool"></label>
                    <input asp-for="QuantAlcool" class="form-control" />
                    <span asp-validation-for="QuantAlcool" class="text-danger"></span>
                </div>

            }
        }

        <div class="form-group">
            <label asp-for="QuantSalgados"></label>
            <input asp-for="QuantSalgados" class="form-control" />
            <span asp-validation-for="QuantSalgados" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantCarne"></label>
            <input asp-for="QuantCarne" class="form-control" />
            <span asp-validation-for="QuantCarne" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataInicio"></label>
            <input asp-for="DataInicio" class="form-control" readonly />
            <span asp-validation-for="DataInicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataFinal"></label>
            <input asp-for="DataFinal" class="form-control" readonly />
            <span asp-validation-for="DataFinal" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataCriacao"></label>
            <input asp-for="DataCriacao" class="form-control" readonly />
            <span asp-validation-for="DataCriacao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TempoAteEventoFormatado"></label>
            <input asp-for="TempoAteEventoFormatado" class="form-control" readonly />
            <span asp-validation-for="TempoAteEventoFormatado" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DuracaoFormatada"></label>
            <input asp-for="DuracaoFormatada" class="form-control" readonly />
            <span asp-validation-for="DuracaoFormatada" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantMetrosQuadrados"></label>
            <input asp-for="QuantMetrosQuadrados" class="form-control" />
            <span asp-validation-for="QuantMetrosQuadrados" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CEP"></label>
            <input asp-for="CEP" class="form-control" readonly />
            <span asp-validation-for="CEP" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Estado"></label>
            <input asp-for="Estado" class="form-control" readonly />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cidade"></label>
            <input asp-for="Cidade" class="form-control" readonly />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bairro"></label>
            <input asp-for="Bairro" class="form-control" readonly />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TipoEvento"></label>
            <input asp-for="TipoEvento" class="form-control" readonly />
            <span asp-validation-for="TipoEvento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FotoDoEvento">Imagem do Evento:</label>
            <input asp-for="FotoDoEvento" type="file" class="form-control" />
            <span asp-validation-for="FotoDoEvento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantCadeiras"></label>
            <input asp-for="QuantCadeiras" class="form-control" />
            <span asp-validation-for="QuantCadeiras" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Organizador"></label>
            <input asp-for="Organizador" class="form-control" readonly />
            <span asp-validation-for="Organizador" class="text-danger"></span>
        </div>


        <input type="submit" value="Atualizar">
    </form>

</body>
<script src="~/js/EventoInfantil.js" asp-append-version="true"></script>
</html>
